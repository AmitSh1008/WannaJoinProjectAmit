<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000">

    <!-- Top Bar with Logout and Add Friends Buttons -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp">

        <Button
            android:id="@+id/addFriendsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Friends"
            />


        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/topBar"
        android:layout_marginVertical="5dp"
        android:src="@drawable/default_profile_picture"
        android:scaleType="centerCrop"/>

    <!-- User Status -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="User Name"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <!-- User Status -->
    <TextView
        android:id="@+id/userStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:text="User Status"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/userStatus"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp">
        </TextView>

        <EditText
            android:id="@+id/updateUsernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/thicker_rounded_square_bg"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:lines="1"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/updateUsernameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Set as Username"
            android:layout_marginHorizontal="10dp">
        </Button>

        <EditText
            android:id="@+id/updateStatusEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/thicker_rounded_square_bg"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:lines="1"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/updateStatusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Set as Status"
            android:layout_marginHorizontal="10dp">
        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Settings"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/light_mode_icon"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Light Mode"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bell_icon"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Notification"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        </LinearLayout>







</RelativeLayout>